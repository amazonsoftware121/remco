<app-header></app-header>

<!-- inner-banner-section start -->
<section class="inner-banner-section">
  <div class="inner-banner-el"><img src="./assets/images/banner-line-el2.png" alt="image"></div>
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="inner-banner-content text-center">
          <h2 class="page-title">Plan subscription</h2>
          <ol class="page-list">
            <li><a [routerLink]="['/']"><i class="fa fa-home"></i> Home</a></li>
            <li>Plan subscription</li>
          </ol>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- inner-banner-section start -->
<!-- choose-section start -->
<section class="choose-section pt-120 pb-120 padding">
  <div class="container">
    <div class="row">
      <div class="col-lg-6">
        <div class="choose-thumb">
          <img src="./assets/images/video.png" alt="image">
        </div>
      </div>
      <div class="col-lg-6 box">
          <div><h3>Payment</h3>
          <hr class="new4"></div>
          <div class="col-md-12">
            <div>
            <div class="box3">
              <h5 style="margin: 10px;">Selected plan</h5>
              <div class="row pb-2">
                <span class="col-4 tags"><b>Plan Name</b></span>
                <span class="pull-right">:</span>
                <span class="col-6 value">{{plan.plan_name}}</span>
              </div>
        
              <div class="row pb-2">
                <span class="col-4 tags"><b>Plan Amount</b></span>
                <span class="pull-right">:</span>
                <h5 class="col-6 value">$ {{plan.plan_amount}}<span style="font-size: 15px;">/participants</span></h5>
                <!-- <span class="col-6 value">$ {{plan.plan_amount}}</span> -->
        
              </div>
              <div class="row pb-2">
                <span class="col-4 tags"><b>User Limit</b></span>
                <span class="pull-right">:</span>
                <span class="col-6 value">{{plan.plan_campaign_limit}}</span>
        
              </div>
              <div class="row pb-2">
                <span class="col-4 tags"><b>Plan Description</b></span>
                <span class="pull-right">:</span>
                <span class="col-6 value">{{plan.plan_description}}</span>
        
              </div>
          </div>
            <hr class="new5">
            <div class="box1">
              <div class="row scroll-bar">
                <div class="col-sm-12" style="margin-bottom:15px;overflow: auto;">
                  <ngx-paypal style="z-index: auto;" [config]="payPalConfig"></ngx-paypal>
                </div>
              </div>
          </div>
          <hr>
          <div class="row">
            <div class="col-sm-12 total_cost">
                <label class="label_text" style="cursor: context-menu;">Pay - {{plan.console}} $</label>
            </div>
          </div>
            </div>
          </div>
      </div>
    </div>
  </div>
</section>
<!-- choose-section end -->

<app-footer></app-footer>
