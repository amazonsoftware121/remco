<app-header></app-header>

<section class="inner-banner-section">
  <div class="inner-banner-el"><img src="./assets/images/banner-line-el2.png" alt="image"></div>
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="inner-banner-content text-center">
          <h2 class="page-title">Reset Password</h2>
          <ol class="page-list">
            <li><a [routerLink]="['/']"><i class="fa fa-home"></i> Home</a></li>
            <li>Reset Password</li>
          </ol>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="login-section pt-120 pb-120">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="login-block text-center">
          <div class="login-block-inner">
            <h3 class="title"> Reset Your Password </h3>
            <form class="login-form mt-4" [formGroup]="passwordForm">
              <div class="frm-group">
                <input type="password" placeholder="New Password" formControlName="new_pass"/>

                <div *ngIf="passwordForm.get('new_pass').errors">
                  <span *ngIf="passwordForm.get('new_pass').touched && !passwordForm.get('new_pass').valid && !passwordForm.get('new_pass').value" class="validate-errors pt-3 pb-3 float-left">Enter New Password</span>
                </div> 
              </div>
              <div class="frm-group">
                <input type="password" placeholder="Confirm Password" formControlName="confirm_pass"/>

                <div *ngIf="passwordForm.get('confirm_pass').errors">
                  <span *ngIf="passwordForm.get('confirm_pass').touched && !passwordForm.get('confirm_pass').valid && !passwordForm.get('confirm_pass').value" class="validate-errors pt-3 pb-3 float-left">Enter Confrim Password</span>
                </div> 

                <span *ngIf="passwordForm.get('new_pass').valid && passwordForm.get('confirm_pass').valid && (passwordForm.get('new_pass').value != passwordForm.get('confirm_pass').value)" class="validate-errors pt-3 pb-3 float-left">New Password and Confirm Password must be same</span>
              </div>
              <button class="btn" (click)="onSubmit()">Reset Password</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<app-footer></app-footer>