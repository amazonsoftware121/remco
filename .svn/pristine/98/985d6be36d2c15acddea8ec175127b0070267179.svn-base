<app-header></app-header>

<!-- inner-banner-section start -->
<section class="inner-banner-section">
  <div class="inner-banner-el"><img src="./assets/images/banner-line-el2.png" alt="image"></div>
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="inner-banner-content text-center">
          <h2 class="page-title">contact Us</h2>
          <ol class="page-list">
            <li><a [routerLink]="['/']"><i class="fa fa-home"></i> Home</a></li>
            <li>contact us</li>
          </ol>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- inner-banner-section start -->
<!-- contact-section start -->
<section class="contact-section pt-120 pb-120">
  <div class="container">
    <div class="row">
      <div class="col-lg-8">
        <iframe
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3096.1220517513025!2d-76.86933008471424!3d39.10369134236292!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89b7dd0342fed295%3A0xdad78e4e2f06fc3!2s8101%20Sandy%20Spring%20Rd%20%23100b%2C%20Laurel%2C%20MD%2020707%2C%20USA!5e0!3m2!1sen!2sin!4v1635156229731!5m2!1sen!2sin"
          style="border:0; width:100%; height:500px;" allowfullscreen="" loading="lazy"></iframe>
      </div>
      <div class="col-lg-4">
        <div class="contact-item">
          <h4 class="title">office address</h4>
          <p>
            <b>REMCO Software, Inc.</b><br />
            8101 Sandy Spring Road Suite 100B, Laurel MD 20707.
          </p>
        </div><!-- contact-item end -->
        <div class="contact-item">
          <h4 class="title">phone number</h4>
          <p><a href="tel:(0161) 123 4567">(0161) 123 4567</a></p>
        </div><!-- contact-item end -->
        <div class="contact-item">
          <h4 class="title">email address</h4>
          <p><a href="mailto:info@remco.com">info@remco.com</a></p>
        </div><!-- contact-item end -->
      </div>
      <div class="col-lg-12">
        <div class="contact-form-area">
          <h3 class="block-title">send your messages</h3>
          <form class="cmn-form contact-form">
            <div class="form-row">
              <div class="col-md-4">
                <div class="form-group">
                  <input type="text" name="contact_name" id="contact_name" placeholder="Name*" required>
                </div>
              </div>
              <div class="col-md-4">
                <div class="form-group">
                  <input type="email" name="contact_email" id="contact_email" placeholder="Email*" required>
                </div>
              </div>
              <div class="col-md-4">
                <div class="form-group">
                  <input type="text" name="contact_phone" id="contact_phone" placeholder="Phone*" required>
                </div>
              </div>
            </div>
            <div class="form-group">
              <textarea placeholder="Write Messages" spellcheck="false"></textarea>
            </div>
            <button type="submit" class="btn btn-gradient text-white btn-radius">send message</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- contact-section end -->

<app-footer></app-footer>
