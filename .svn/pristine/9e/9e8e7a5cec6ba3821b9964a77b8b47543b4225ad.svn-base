<app-header></app-header>

<!-- inner-banner-section start -->
<section class="inner-banner-section">
  <div class="inner-banner-el"><img src="./assets/images/banner-line-el2.png" alt="image"></div>
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="inner-banner-content text-center">
          <h2 class="page-title">Pricing</h2>
          <ol class="page-list">
            <li><a [routerLink]="['/']"><i class="fa fa-home"></i> Home</a></li>
            <li>Pricing</li>
          </ol>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- inner-banner-section start -->
<!-- pricing-section start -->
<section class="pricing-section pt-120 pb-120">
  <div class="container">
    <div class="row">
      <div class="col-xl-6 col-lg-7 col-md-6">
        <div class="section-header">
          <h2 class="section-title text-capitalize">choose your best plan for grow business </h2>
        </div>
      </div>
      <div class="col-xl-6 col-lg-5 col-md-6">
        <div class="btn-area text-md-right text-center">
          <a href="javascript:void(0);" id="monthly-amount-btn" class="btn btn-gradient btn-radius">Monthly</a>
          <a href="javascript:void(0);" id="yearly-amount-btn" class="btn btn-gradient btn-radius">Annual</a>
        </div>
      </div>
    </div>
    <div class="row mb-none-30">
      <div class="col-lg-4 col-sm-6">
        <div class="pricing-item mb-30">
          <div class="pricing-header">
            <div class="price-amount">
              <span class="monthly-amount active">$00</span>
              <span class="yearly-amount">$00</span>
            </div>
            <span class="pricing-name">free</span>
          </div>
          <div class="pricing-body">
            <ul>
              <li>1 gb disk space</li>
              <li>500 mb bandwith</li>
              <li>3 sub domain</li>
              <li>5 email account</li>
              <li>5 FTP account</li>
            </ul>
          </div>
          <div class="pricing-footer text-center">
            <a href="javascript:void(0);" class="btn btn-radius">buy now</a>
          </div>
        </div>
      </div><!-- pricing-item end -->
      <div class="col-lg-4 col-sm-6">
        <div class="pricing-item mb-30">
          <div class="pricing-header">
            <div class="price-amount">
              <span class="monthly-amount active">$15</span>
              <span class="yearly-amount">$150</span>
            </div>
            <span class="pricing-name">silver</span>
          </div>
          <div class="pricing-body">
            <ul>
              <li>2 gb disk space</li>
              <li>1024 mb bandwith</li>
              <li>5 sub domain</li>
              <li>Unlimited email account</li>
              <li>Unlimited FTP account</li>
            </ul>
          </div>
          <div class="pricing-footer text-center">
            <a href="javascript:void(0);" class="btn btn-radius">buy now</a>
          </div>
        </div>
      </div><!-- pricing-item end -->
      <div class="col-lg-4 col-sm-6">
        <div class="pricing-item mb-30">
          <div class="pricing-header">
            <div class="price-amount">
              <span class="monthly-amount active">$35</span>
              <span class="yearly-amount">$350</span>
            </div>
            <span class="pricing-name">Gold</span>
          </div>
          <div class="pricing-body">
            <ul>
              <li>10 gb disk space</li>
              <li>2 gb bandwith</li>
              <li>Unlimited sub domain</li>
              <li>Unlimited email account</li>
              <li>Unlimited FTP account</li>
            </ul>
          </div>
          <div class="pricing-footer text-center">
            <a href="javascript:void(0);" class="btn btn-radius">buy now</a>
          </div>
        </div>
      </div><!-- pricing-item end -->
    </div>
  </div>
</section>
<!-- pricing-section end -->

<app-footer></app-footer>
